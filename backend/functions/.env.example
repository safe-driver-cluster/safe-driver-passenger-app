# Text.lk SMS Gateway Configuration
# Copy this file to .env and fill in your actual credentials

# Text.lk API Configuration
TEXTLK_API_TOKEN=your_text_lk_api_token_here
TEXTLK_API_URL=https://app.text.lk/api/v3/sms/send
TEXTLK_SENDER_ID=TextLKDemo

# Environment Configuration
NODE_ENV=development
DEBUG_MODE=true

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_REGION=asia-south1

# Rate Limiting Configuration
OTP_RATE_LIMIT_POINTS=3
OTP_RATE_LIMIT_DURATION=3600
VERIFICATION_RATE_LIMIT_POINTS=5
VERIFICATION_RATE_LIMIT_DURATION=300

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3
OTP_LENGTH=6

# SMS Message Template
# Use {OTP} for the verification code and {MINUTES} for expiry time
SMS_TEMPLATE="Your SafeDriver verification code is: {OTP}. Valid for {MINUTES} minutes. Do not share this code with anyone."

# Security Configuration
HASH_ALGORITHM=sha256
TTL_CLEANUP_INTERVAL=3600

# Monitoring Configuration
ENABLE_DETAILED_LOGGING=true
LOG_LEVEL=info